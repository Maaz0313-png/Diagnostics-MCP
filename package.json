{
  "name": "diagnostics-mcp-server",
  "displayName": "Diagnostics MCP Server",
  "description": "HTTP MCP Server (port 3846) with 5 diagnostic tools. Auto-starts when VS Code opens. MCP Config: {\"type\": \"http\", \"url\": \"http://127.0.0.1:3846/mcp\"}. Tools: get_all_diagnostics, get_errors, get_warnings, get_info, get_workspace_health. 3 Commands: Start/Stop/Status server.",
  "version": "1.0.12",
  "publisher": "maaz-tajammul",
  "author": "Maaz Tajammul",
  "license": "MIT",
  "bin": {
    "diagnostics-mcp": "./index.js"
  },
  "main": "./dist/extension.js",
  "engines": {
    "node": ">=18.0.0",
    "vscode": "^1.104.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "diagnostics",
    "http-transport",
    "typescript",
    "eslint",
    "linter",
    "code-analysis",
    "workspace-health",
    "real-time"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Maaz0313-png/Diagnostics%20MCP"
  },
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/Maaz0313-png/Diagnostics-MCP#readme",
  "bugs": {
    "url": "https://github.com/Maaz0313-png/Diagnostics-MCP/issues"
  },
  "qna": "https://github.com/Maaz0313-png/Diagnostics-MCP/discussions",
  "icon": "https://raw.githubusercontent.com/Maaz0313-png/Diagnostics-MCP/main/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "diagnostics-mcp.start",
        "title": "ðŸš€ Start HTTP MCP Server (Port 3846)",
        "category": "Diagnostics MCP"
      },
      {
        "command": "diagnostics-mcp.stop",
        "title": "ðŸ›‘ Stop HTTP MCP Server",
        "category": "Diagnostics MCP"
      },
      {
        "command": "diagnostics-mcp.status",
        "title": "ðŸ“Š MCP Server Status (5 Tools + Health)",
        "category": "Diagnostics MCP"
      }
    ],
    "configuration": {
      "title": "Diagnostics MCP Server",
      "properties": {
        "diagnostics-mcp.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start HTTP MCP server when VS Code opens"
        },
        "diagnostics-mcp.port": {
          "type": "number",
          "default": 3846,
          "description": "Port for HTTP MCP server (default: 3846)"
        }
      }
    },
    "mcpConfiguration": {
      "title": "MCP Client Configuration",
      "description": "Add this to your MCP client configuration (Claude Desktop, VS Code MCP settings, etc.)",
      "example": {
        "mcpServers": {
          "diagnostics": {
            "type": "http",
            "url": "http://127.0.0.1:3846/mcp",
            "description": "VS Code diagnostics detector (TypeScript, ESLint, Prettier, all extensions)"
          }
        }
      }
    }
  },
  "scripts": {
    "start": "node index.js",
    "test": "node test-simple.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "prepublish": "npm run compile"
  },
  "files": [
    "index.js",
    "dist/**/*.js",
    "src/**/*.ts",
    "README.md",
    "LICENSE",
    "package.json",
    "tsconfig.json"
  ],
  "devDependencies": {
    "@types/node": "^24.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.x",
    "@typescript-eslint/parser": "^8.x",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.x"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "glob": "^11.0.3",
    "typescript": "^5.9.3"
  }
}
